{
  "manifest_version": 3,
  "name": "Time Tracker Extension",
  "version": "1.0.0",
  "description": "Free time tracking extension for your browser",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage", "tabs", "alarms", "windows"],
  "host_permissions": ["http://tools.ericstrohmaier.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://tools.ericstrohmaier.com/signin*",
        "http://tools.ericstrohmaier.com/extension-auth-success*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
